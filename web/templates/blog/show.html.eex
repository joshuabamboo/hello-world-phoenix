<h2>Show blog</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @blog.title %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= @blog.content %>
  </li>

  <li>
    <strong>Author:</strong>
    <%= @blog.author %>
  </li>

</ul>

<%= link "Edit", to: blog_path(@conn, :edit, @blog) %>
<%= link "Back", to: blog_path(@conn, :index) %>
